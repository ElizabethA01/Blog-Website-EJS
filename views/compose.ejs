<%- include("partials/header"); -%>

<h1>Compose</h1>

<form class="publish" action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" name="titleText" required autocomplete="off">
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea class="form-control" name="postText" rows="5" required autocomplete="off"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer"); -%>
